.eye-detail {
  width: 100%;
  height: auto;
}

.eye-detail-video {
  width: 100%;
  height: 230px;
  background: #000;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 100;
}
.detail-video-info {
  width: 100%;
  height: 100%;
}

.eye-detail-content {
  height: auto;
  padding: 0 20px 20px;
  margin-top: 230px;
  z-index: 99;
}
.content-title,
.content-info,
.content-introduce {
  display: block;
  font-size: 12px;
  color: #333;
  line-height: 20px;
}
.content-title {
  font-size: 18px;
  color: #333;
  line-height: 40px;
}
.content-info {
  line-height: 22px;
}
.content-introduce {}
.content-statistic-list {
  width: 100%;
}
.statistic-liked,
.statistic-share,
.statistic-reply {
  display: inline-block;
  width: 33%;
  height: 40px;
  font-size: 14px;
  line-height: 40px;
  text-align: center;
  position: relative;
}
.statistic-liked:before {
  display: inline-block;
  content: '';
  width: 16px;
  height: 16px;
  background-image: url("http://opoze7s40.bkt.clouddn.com/eye-detial-like.png");
  background-repeat: no-repeat;
  background-size: cover;
  position: absolute;
  top: 12px;
  left: 12px;
}
.statistic-liked:after,
.statistic-share:after {
  display: inline-block;
  content: '';
  width: 1px;
  height: 20px;
  background: #ccc;
  position: absolute;
  top: 10px;
  right: 5px;
}
.statistic-share:before {
  display: inline-block;
  content: '';
  width: 16px;
  height: 16px;
  background-image: url("http://opoze7s40.bkt.clouddn.com/eye-detail-share.png");
  background-repeat: no-repeat;
  background-size: cover;
  position: absolute;
  top: 12px;
  left: 12px;
}
.statistic-reply:before {
  display: inline-block;
  content: '';
  width: 16px;
  height: 16px;
  background-image: url("http://opoze7s40.bkt.clouddn.com/eye-detail-reply.png");
  background-repeat: no-repeat;
  background-size: cover;
  position: absolute;
  top: 12px;
  left: 12px;
}
.content-video-list {
  border-top: 1px solid #ccc;
}
.video-list-title {
  display: block;
  font-size: 14px;
  line-height: 18px;
  color: #333;
  margin-top: 10px;
}
.video-list-item {
  position: relative;
  margin-top: 20px;
}
.video-list-item-img {
  position: absolute;
  top: 0;
  left: 0;
  width: 26%;
  height: 58px;
  border: 1px solid #ccc;
}
.video-list-detail {
  width: 70%;
  height: 60px;
  margin-left: 30%;
}
.video-list-detail-title,
.video-list-detail-time {
  display: block;
  width: 100%;
  height: 30px;
  line-height: 30px;
  color: #333;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.video-list-detail-title {
  font-size: 14px;
}
.video-list-detail-time {
  font-size: 12px;
}