.eye-follow {
  width: 100%;
  height: auto;
}

.follow-top {
  width: 100%;
  height: 30px;
  font-size: 18px;
  font-family: "American Typewriter";
  color: #333;
  line-height: 30px;
  text-align: center;
  background: #fafafa;
  position: fixed;
  z-index: 100;

}
.follow-top-text {
  font-size: 12px;
  font-family: "Microsoft Sans Serif";
  position: absolute;
  left: 15px;
  top: 0;
}

.followed-list {
  width: 100%;
  margin-bottom: 20px;
  z-index: 99;
}
.followed-list-img {
  width: 100%;
  height: 200px;
}
.followed-list-intro {
  width: 100%;
  height: 50px;
  position: relative;
}
.list-intro-img {
  width: 20%;
  text-align: center;
  position: absolute;
  top: 0;
  left: 0;
}
.list-intro-icon {
  width: 28px;
  height: 28px;
  border: 1px solid #ccc;
  border-radius: 15px;
  margin-top: 6px;
}
.list-intro-text {
  width: 75%;
  padding-right: 5%;
  margin-left: 20%;
}
.list-intro-text-title,
.list-intro-text-brand {
  display: block;
  width: 100%;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.list-intro-text-title {
  font-size: 14px;
  line-height: 22px;
}
.list-intro-text-brand {
  font-size: 12px;
}